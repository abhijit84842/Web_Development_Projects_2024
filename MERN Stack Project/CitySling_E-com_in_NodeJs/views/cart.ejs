<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CART</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 w-full h-screen">
    <h1
      class="text-white text-5xl font-bold flex justify-center items-center my-20"
    >
      Your Cart
    </h1>
    <div class="bg-gray-900 flex justify-center flex-col mx-5">
      <div
        class="flex justify-between mx-20 p-2 text-white text-xl font-semibold"
      >
        <div><a href="">PRODUCT</a></div>
        <div><a href="">QUANTITY</a></div>
        <div><a href="">PRICE DETAILS</a></div>
      </div>
      <div class="w-[100%] bg-red-600 p-[1px]"></div>
    </div>
    <!-----------------------------------------------------------------------------------------------CARTS BAG START------------------->

    <div class="bg-gray-700 my-5 mx-10 p-10 rounded-lg">
      <!--------------------------------------------------------------------------------------orginal start------------->
      <div class="flex justify-between">
        <div class="flex flex-col">
          <!---------------------------------------------------------------------------------Cart Items Start---------->
          <% cartProducts.forEach(function(items){ %>
          <div class="cart-items">
            <div class="flex justify-center items-center">
              <img
                class="w-[15rem] h-[20rem] object-cover rounded-md"
                src="data:image/jpeg;base64,<%=items.image.toString('base64') %>"
                alt=""
              />
              <div class="w-[40%] text-xs flex flex-col text-white ml-5">
                <span class="font-semibold"><%=items.name %></span>
                <span class="text-[10px] text-green-500 tracking-wider"
                  ><p><%=items.subtitle %></p>
                </span>

                <span class="text-lg font-semibold"
                  >$ <span class="text-red-500"><%=items.price %></span></span
                >
              </div>
            </div>
            <div class="w-[90%] bg-red-300 p-[1px] my-4 ml-10"></div>
          </div>
          <% }) %>
        </div>

        <!-- <div class="mr-[24rem]">
          <input class="w-[40%]" type="number" value="1" />
        </div> -->
        <!----------------------------------------Price section-->

        <div class="w-[15%]">
          <p class="text-red-600 py-5">
            MRP:-
            <span class="text-white font-semibold ml-24">₹ <%=totalMRP %></span>
          </p>
          <p class="text-green-600 py-5">
            Discount:- <span class="text-white font-semibold ml-20">₹ 500</span>
          </p>
          <p class="text-red-600 py-5">
            Delivery Charges:-
            <span class="text-white font-semibold ml-9">₹ 50</span>
          </p>
          <div class="bg-slate-200 p-[1px] mt-15"></div>
          <p class="text-white font-bold text-lg">
            TOTAL <span class="text-red-500 ml-20">₹ 3050</span>
          </p>
        </div>
      </div>

      <!-------------------------------------------------------------------------------------------orginal end------------------------>
    </div>

    <!-------------------------------------------------------------------------------------------------CARTS BAG END--------------------->
  </body>
</html>
